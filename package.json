{
  "name": "nist",
  "version": "0.1.0",
  "description": "Simple ANSI/NIST-ITL 1-2011 encoder and decoder.",
  "author": "Ivo Raisr",
  "license": "MIT",
  "keywords": [
    "NIST",
    "ANSI",
    "Fingerprints",
    "Faces",
    "Biometric",
    "Information"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivosh/nist.git"
  },
  "bugs": {
    "url": "https://github.com/ivosh/nist/issues"
  },
  "homepage": "https://github.com/ivosh/nist#readme",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf coverage lib",
    "coverage": "cross-env NODE_ENV=test jest --env=node --colors --coverage",
    "clobber": "npm run clean && rimraf node_modules",
    "lint": "npm run lint:eslint && npm run lint:tslint",
    "lint:eslint": "eslint \"src/**/*.ts\"",
    "lint:tslint": "tslint --project tsconfig.json \"src/**/*.ts\"",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run test && npm run lint",
    "prepare": "npm run build",
    "prettier": "prettier \"src/**/*.{ts,json}\" --write",
    "test": "cross-env NODE_ENV=test jest --env=node --colors",
    "test:watch": "cross-env NODE_ENV=test jest --env=node --colors --watch"
  },
  "dependencies": {
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.0",
    "@types/rimraf": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.6.4"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "preset": "ts-jest",
    "roots": [
      "src"
    ],
    "testPathIgnorePatterns": [
      "node_modules/"
    ]
  }
}
